{
  "dashboard": {
    "title": "Session-Buddy Phase 4 Monitoring",
    "description": "Real-time monitoring for skill metrics, anomalies, and system health",
    "tags": ["session-buddy", "skills", "analytics", "phase4"],
    "timezone": "browser",
    "schemaVersion": 38,
    "version": 1,
    "refresh": "5s",
    "panels": [
      {
        "id": 1,
        "title": "Real-Time Skill Invocations",
        "type": "timeseries",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 0},
        "targets": [
          {
            "expr": "rate(skill_invocations_total[1m])",
            "legendFormat": "{{skill_name}} ({{workflow_phase}})",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "custom": {
              "lineWidth": 2,
              "fillOpacity": 10
            },
            "color": {"mode": "palette-classic"}
          }
        }
      },
      {
        "id": 2,
        "title": "Skill Completion Rate",
        "type": "gauge",
        "gridPos": {"h": 8, "w": 6, "x": 12, "y": 0},
        "targets": [
          {
            "expr": "avg(skill_completion_rate) by (skill_name)",
            "legendFormat": "{{skill_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "red"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.9, "color": "green"}
              ]
            }
          }
        }
      },
      {
        "id": 3,
        "title": "Anomaly Detection",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 0},
        "targets": [
          {
            "expr": "sum(increase(anomalies_detected_total[5m]))",
            "legendFormat": "Anomalies (5m)",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 4,
        "title": "Active Sessions",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 18, "y": 4},
        "targets": [
          {
            "expr": "active_sessions_total",
            "legendFormat": "Active Sessions",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "No Sessions", "color": "red"}
                }
              }
            ]
          }
        }
      },
      {
        "id": 5,
        "title": "Top Skills by Invocations (24h)",
        "type": "table",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 8},
        "targets": [
          {
            "expr": "topk(10, sum(increase(skill_invocations_total[24h])) by (skill_name))",
            "format": "table",
            "instant": true,
            "refId": "A"
          }
        ],
        "transformations": [
          {
            "id": "organize",
            "options": {
              "excludeByName": {"Time": true},
              "indexByName": {"Value": 1, "skill_name": 0},
              "renameByName": {"Value": "Invocations", "skill_name": "Skill Name"}
            }
          }
        ]
      },
      {
        "id": 6,
        "title": "Skill Duration Distribution",
        "type": "heatmap",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 8},
        "targets": [
          {
            "expr": "histogram_quantile(0.95, sum(rate(skill_duration_seconds_bucket[5m])) by (le, skill_name))",
            "legendFormat": "{{skill_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "s",
            "color": {"mode": "spectrum"}
          }
        }
      },
      {
        "id": 7,
        "title": "Workflow Phase Distribution",
        "type": "piechart",
        "gridPos": {"h": 8, "w": 12, "x": 0, "y": 16},
        "targets": [
          {
            "expr": "sum(increase(skill_invocations_total[1h])) by (workflow_phase)",
            "legendFormat": "{{workflow_phase}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "palette-classic"},
            "mappings": [
              {
                "type": "value",
                "options": {
                  "setup": {"text": "Setup"},
                  "execution": {"text": "Execution"},
                  "verification": {"text": "Verification"},
                  "cleanup": {"text": "Cleanup"},
                  "rollback": {"text": "Rollback"}
                }
              }
            ]
          }
        }
      },
      {
        "id": 8,
        "title": "Anomaly Timeline",
        "type": "timeline",
        "gridPos": {"h": 8, "w": 12, "x": 12, "y": 16},
        "targets": [
          {
            "expr": "increase(anomalies_detected_total[1h])",
            "legendFormat": "{{anomaly_type}} - {{skill_name}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 3, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 9,
        "title": "WebSocket Server Health",
        "type": "stat",
        "gridPos": {"h": 4, "w": 6, "x": 0, "y": 24},
        "targets": [
          {
            "expr": "up{job=\"session-buddy-websocket\"}",
            "legendFormat": "Server Status",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "mappings": [
              {
                "type": "value",
                "options": {
                  "0": {"text": "DOWN", "color": "red"},
                  "1": {"text": "UP", "color": "green"}
                }
              }
            ]
          }
        }
      },
      {
        "id": 10,
        "title": "Database Connection Pool",
        "type": "gauge",
        "gridPos": {"h": 4, "w": 6, "x": 6, "y": 24},
        "targets": [
          {
            "expr": "sqlite_connections_active / sqlite_connections_max",
            "legendFormat": "Pool Usage",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "unit": "percentunit",
            "min": 0,
            "max": 1,
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 0.7, "color": "yellow"},
                {"value": 0.9, "color": "red"}
              ]
            }
          }
        }
      },
      {
        "id": 11,
        "title": "Alert Rules Summary",
        "type": "stat",
        "gridPos": {"h": 4, "w": 12, "x": 12, "y": 24},
        "targets": [
          {
            "expr": "sum(ALERTS{alertname=~\"SessionBuddy.*\"}) by (alertstate)",
            "legendFormat": "{{alertstate}}",
            "refId": "A"
          }
        ],
        "fieldConfig": {
          "defaults": {
            "color": {"mode": "thresholds"},
            "thresholds": {
              "mode": "absolute",
              "steps": [
                {"value": 0, "color": "green"},
                {"value": 1, "color": "yellow"},
                {"value": 5, "color": "red"}
              ]
            }
          }
        }
      }
    ],
    "alerting": {
      "conditions": [
        {
          "id": 1,
          "name": "HighAnomalyRate",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "query": {
            "refId": "A",
            "expr": "sum(increase(anomalies_detected_total[5m])) > 5",
            "instant": true
          },
          "frequency": "1m",
          "handler": 1,
          "name": "High Anomaly Rate",
          "noDataState": "NoData",
          "execErrState": "Alerting",
          "message": "More than 5 anomalies detected in the last 5 minutes"
        },
        {
          "id": 2,
          "name": "LowCompletionRate",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "query": {
            "refId": "A",
            "expr": "avg(skill_completion_rate) by (skill_name) < 0.7",
            "instant": true
          },
          "frequency": "5m",
          "handler": 1,
          "name": "Low Completion Rate",
          "noDataState": "NoData",
          "execErrState": "Alerting",
          "message": "Skill completion rate below 70%"
        },
        {
          "id": 3,
          "name": "WebSocketServerDown",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "query": {
            "refId": "A",
            "expr": "up{job=\"session-buddy-websocket\"} == 0",
            "instant": true
          },
          "frequency": "30s",
          "handler": 1,
          "name": "WebSocket Server Down",
          "noDataState": "Alerting",
          "execErrState": "Alerting",
          "message": "WebSocket server is not responding"
        },
        {
          "id": 4,
          "name": "DatabasePoolExhausted",
          "datasource": {
            "type": "prometheus",
            "uid": "prometheus"
          },
          "query": {
            "refId": "A",
            "expr": "sqlite_connections_active / sqlite_connections_max > 0.9",
            "instant": true
          },
          "frequency": "1m",
          "handler": 1,
          "name": "Database Pool Exhausted",
          "noDataState": "NoData",
          "execErrState": "Alerting",
          "message": "Database connection pool usage above 90%"
        }
      ]
    }
  }
}
